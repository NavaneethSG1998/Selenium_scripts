package softwareselenium;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class Scenario2 {

	public static void main(String[] args) throws InterruptedException 
	{
		 System.setProperty("webdriver.chrome.driver", "./selenium/chromedriver.exe");
	      WebDriver driver=new ChromeDriver();
	      driver.get("https://www.youtube.com");
	       Thread.sleep(2000);
	       driver.findElement(By.name("search_query")).sendKeys("kantara movie trailer");
	       driver.findElement(By.id("search-icon-legacy")).click();
	       Thread.sleep(2000);
	       driver.findElement(By.linkText("Kantara Official Trailer | Rishab Shetty | Vijay Kiragandur | Hombale Films | In Cinemas 30 Sep 2022")).click();
	       	}

}
